@model BaseViewModel

<div id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
    <div class="sidebar-sticky pt-3 ">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @Model.SideBarState.HomeActive" href="/Home/Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    Главная
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @Model.SideBarState.TaskActive" href="/Task/List">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                    Задания
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @Model.SideBarState.UserActive" href="/User/List">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                    Сотрудники
                </a>
            </li>
        </ul>
        <hr />
        <h6 class="sidebar-heading d-flex justify-content-between px-3 mt-4 mb-2 text-muted">
            <span>СТАТИСТИКА</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bar-chart-2"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
        </h6>

        <div class="container mb-2 px-3 text-muted">
            <div class="row">
                <div class="col-8">сотрудников</div>
                <div class="col-4 text-right">@Model.SideBarState.UsersCount</div>
            </div>
            <div class="row">
                <div class="col-8">всего заданий</div>
                <div class="col-4 text-right">@Model.SideBarState.TasksCount</div>
            </div>
            <div class="row">
                <div class="col-8">выполнено заданий</div>
                <div class="col-4 text-right">@Model.SideBarState.FinishedTasksCount</div>
            </div>
        </div>
    </div>
</div>