@model LoginViewModel

<h3>Вход в личный кабинет</h3>

<div>
    <form asp-controller="Account" asp-action="Login" method="Post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" placeholder="Введите логин" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Введите пароль"/>
            <span asp-validation-for="Password"></span>
        </div> 
        <div class="form-group form-check">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe"></label>
            <span asp-validation-for="RememberMe"></span>
        </div>
        <hr />
        <p class="text-center">
            <input class="btn btn-primary btn-custom" type="submit" value="Войти" />
        </p>
    </form>
</div>
