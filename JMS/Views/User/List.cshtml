@using Microsoft.AspNetCore.Identity
@model UserViewModel
@inject SignInManager<IdentityUser> SignInManager

<h3>Cотрудники</h3>

<div class="table-responsive table-hover">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var el in Model.Users)
            {
                <tr>
                    <td><a asp-controller="User" asp-action="Edit" asp-route-id="@el.id">@el.UserName</a></td>
                    <td>@el.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <hr />
    <p class="text-center">
        <a class="btn btn-success btn-custom" asp-controller="User" asp-action="Edit">Создать</a>
    </p>
} else
{
<div class="alert alert-warning text-center" role="alert">
    Для добавления и редактирования сотрудников необходимо пройти авторизацию!
</div>
}

